EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-goes-here

# Optional for Node scripts
SUPABASE_URL=${EXPO_PUBLIC_SUPABASE_URL}
SUPABASE_ANON_KEY=${EXPO_PUBLIC_SUPABASE_ANON_KEY}

# Toggle to make the app use the remote Supabase DB instead of AsyncStorage
# Set to 'true' to attempt remote DB usage (requires valid Supabase keys)
EXPO_PUBLIC_USE_REMOTE_DB=false
SUPABASE_USE_REMOTE=false

# Postgres connection string for running migrations from this repo (pg)
# Example: postgres://postgres:password@db.xxxx.supabase.co:5432/postgres
SUPABASE_DB_URL=

# Notes:
# - Do NOT commit your real keys. Copy this file to `.env` and fill values.
# - Expo will expose any env var prefixed with EXPO_PUBLIC_ to the app.